{
  "name": "mindgrow-kids",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:web": "vite",
    "dev:api": "node --watch server/index.js",
    "build": "tsc -b && vite build && npm run build:copy-server",
    "build:copy-server": "node scripts/copy-server.js",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "jest",
    "seed": "node scripts/seed.mjs",
    "insert": "node scripts/insert-direct.mjs",
    "pwa:dev": "vite",
    "pwa:build": "vite build",
    "cap:init": "npx cap init \"MindGrow Kids\" com.mindgrowkids.app --web-dir=dist",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",
    "cap:add:ios": "npx cap add ios",
    "cap:add:android": "npx cap add android",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "assets": "npx capacitor-assets generate"
  },
  "dependencies": {
    "@capacitor-community/http": "^1.4.1",
    "@capacitor/app": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/network": "^8.0.0",
    "@capacitor/preferences": "^8.0.0",
    "@rive-app/react-canvas": "^4.25.0",
    "bcryptjs": "^3.0.3",
    "chart.js": "^4.5.1",
    "cookie-parser": "^1.4.7",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.26",
    "howler": "^2.2.4",
    "jsonwebtoken": "^9.0.3",
    "lottie-react": "^2.4.1",
    "mongoose": "^9.0.1",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-calendar": "^6.0.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.0",
    "react-sketch-canvas": "^6.2.0",
    "tinycolor2": "^1.6.0",
    "zod": "^4.1.13",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^8.0.0",
    "@types/howler": "^2.2.12",
    "@types/node": "^20.19.26",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.3",
    "vite": "^5.3.1",
    "vite-plugin-pwa": "^1.2.0"
  }
}
